---
zones:
  common:
    hostmaster: hostmaster@redzone.com.
    lifetimes:
      refresh: 1H
      retry: 15M
      expire: 1W
      negative: 1H
      ttl: 1H
    default: platinum
    mailservers:
      mx0:
        priority: 10
        machine: gold
      mx1:
        priority: 20
        machine: silver
    nameservers:
      ns0: gold
      ns1: silver
    aliases:
      www: platinum
    cnames:
      db: gold
      backup: silver
      search: www.google.com
    wildcard: platinum
  redzone.com:
    arpa:
      - name: '32.12.in-addr.arpa'
        network: '12.32.0.0/16'  
      - name: '9.8.7.6.4.3.2.1.1.0.0.2.ip6.arpa'
        network: '2001:1234:6789::/48'
